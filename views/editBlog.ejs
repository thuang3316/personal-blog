<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= blog.title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Update Article</h1>
        <% if (errors.length > 0) { %>
            <div class="errors">
                <h2>We got some error!</h2>
                <ul>
                    <% errors.forEach(error => { %>
                        <li class="error-item"><%= error.msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        <form action="/admin/edit/<%= blog.id %>" method="post" class="editForm">
            <div class="blog-headers">
                <label for="title">Title: </label>
                <input type="text" name="title" id="title" value="<%= blog.title %>">

                <label for="publish_date">Publish Date: </label>
                <input type="date" name="publish_date" id="publish_date" value="<%= formattedDate %>">

                <label for="type">Blog Type: </label>
                <select name="type" id="type">
                    <option value="tech">tech</option>
                    <option value="life">life</option>
                    <option value="other">other</option>
                </select>
            </div>
            <div class="blog-content">
                <label for="content">Content: </label>
                <textarea name="content" id="content"><%= blog.content %></textarea>
            </div>
            <div class="edit-options">
                <button type="submit">Submit</button>
                <a href="/admin">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>